@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <p>Код товара: @Model.ProductID</p>
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary p-4" style="float:right">
                <b>@Model.Price.ToString("#0.00") грн</b>
            </span>
        </h4>
    </div>
    <span class="card-text p-1">
        @Model.Description
        <p class="bg-success float-right p-2 text-white">
            В наявності: @Model.InStock шт
        </p>
    </span>
</div>