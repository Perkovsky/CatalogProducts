<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <title>Catalog Products</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-toggleable-md navbar-expand-lg fixed-top navbar-light bg-primary main-nav bg-main">
        <a class="navbar-brand" href="/">Catalog Products</a>
        <div class="collapse navbar-collapse main-menu" id="navbarNavDropdown">
            <ul class="nav navbar-nav mr-auto">
                <li id="app-shopping-cart" class="nav-item">
                    <div class="dropdown">
                        <a class="nav-link text-white"
                           asp-controller="Admin"
                           asp-action="Index">
                            <i class="align-icon fa fa-cog fa-lg" aria-hidden="false"></i> Адмінка
                        </a>
                    </div>
                </li>
            </ul>
            <!-- Search Box -->
            <form class="form-inline my-2 my-lg-0"
                  asp-controller="Product" asp-action="Search" method="get">
                <div class="input-group">
                    <input class="form-control" name="stringSearch" type="text" aria-label="Search"
                           data-placement="bottom">
                    <span class="input-group-btn">
                        <button class="btn btn-success search-box-btn" type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </nav>

    <div class="row m-1 p-1 mt-5 pt-5">
        @RenderBody()
    </div>
</body>
</html>